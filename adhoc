# 1. List of bigrams → string
def bigram_list_to_string(bigram_list):
    return ",".join(bigram_list)

# 2. List of list of bigrams → string
def bigram_list_of_lists_to_string(bigram_list_of_lists):
    return ";".join([",".join(sublist) for sublist in bigram_list_of_lists])

# 3. String → set of bigrams
def string_to_bigram_set(s):
    return set(s.split(",")) if s else set()

# 4. String → set of frozensets of bigrams
def string_to_bigram_set_of_frozensets(s):
    if not s:
        return set()
    groups = s.split(";")
    return {frozenset(group.split(",")) for group in groups if group}
